heat_template_version: rocky

description: DJ Blyatman proudly presents

resources:
  Net:
    type: OS::Neutron::Net
    properties:
      admin_state_up: True
      name: network
      shared: False

  PrivateSubnet:
    type: OS::Neutron::Subnet
    properties:
      name: subnet
      cidr: 10.0.0.0/24
      dns_nameservers:
      - 8.8.8.8
      - 8.8.4.4
      enable_dhcp: True
      network: { get_resource: Net }

  Router:
    type: OS::Neutron::Router
    properties:
      admin_state_up: True
      name: Router
      external_gateway_info: {
        enable_snat: True,
        network: ext-net
      }
  RouterPort:
    type: OS::Neutron::Port
    properties:
      name: RouterPort
      fixed_ips:
        - ip_address: 10.0.0.1
      network: { get_resource: Net }

  RouterInterface:
    type: OS::Neutron::RouterInterface
    properties:
      router: { get_resource: Router }
      port: { get_resource: RouterPort }

  Jump:
    type: OS::Nova::Server
    properties:
      name: jump
      availability_zone: compute1
      flavor: linux
      image: ubuntu_server_18.04_amd64_Openstack
      user_data_update_policy: REPLACE
      key_name: ssh-key
      networks:
        - subnet: { get_resource: PrivateSubnet }
      user_data_format: RAW
      user_data: |
        #!/bin/bash
        apt-get update -y